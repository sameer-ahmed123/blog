---
import type { CollectionConfig, CollectionEntry } from "astro:content";
import Post from "./Post.astro";

type props = {
  posts: CollectionEntry<"posts">[];
};

const { posts } = Astro.props;
---

<div
  class="grid grid-cols-[1fr,1fr] gap-x-16 gap-y-14 max-md:grid-cols-1 mb-24"
>
  {posts.map((post) => <Post post={post} />)}
</div>
